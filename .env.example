# MotorSoft Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# Application
# ===================
APP_NAME=MotorSoft
DEBUG=true
SECRET_KEY=your-super-secret-key-change-me

# ===================
# Database
# ===================
DATABASE_URL=postgresql+asyncpg://motorsoft:motorsoft@localhost:5432/motorsoft

# ===================
# Redis
# ===================
REDIS_URL=redis://localhost:6379/0

# ===================
# Telegram Bot
# ===================
TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather

# Admin Telegram IDs (comma-separated)
ADMIN_IDS=123456789

# Operator Telegram IDs (receive manual orders)
OPERATOR_IDS=123456789

# ===================
# S3 Storage (optional)
# ===================
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET_ORIGINALS=motorsoft-originals
S3_BUCKET_MODIFIED=motorsoft-modified

# ===================
# WinOLS
# ===================
WINOLS_STORAGE_PATH=/path/to/winols/files

# ===================
# Pricing
# ===================
DEFAULT_PRICE=50.0
